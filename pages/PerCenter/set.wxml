<view class='per-set'>
  <view class='per-set-user'>
    <image class='per-set-img' src='/pages/images/perCenter/user-set.png'></image>
  </view>
  <view class='mui-table-view'>
    <view class='mui-table-view-cell'>
      <view class='col-xs-3'> 姓名：</view>
      <view class='col-xs-9'>Fox72982</view>
    </view>
    <view class='mui-table-view-cell'>
      <view class='col-xs-3'> 类型：</view>
      <view class='col-xs-9'>盘厂电工</view>
    </view>
    <view class='mui-table-view-cell'>
      <view class='col-xs-3'> 性别：</view>
      <view class='col-xs-9'>
        <text class="{{selected?'red':'default'}}" bindtap="selected">男<text class='male'></text></text>
        <text class="{{selected1?'red':'default'}}" bindtap="selected1">女<text class='male'></text></text>
      </view>
    </view>
